{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "@/": ["./src/", "./contracts/"],
    },
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
  },
  "include": [
    "./src/**/*",
    "./contracts/**/*",
    "./index.ts"
  ],
  "exclude": [
    "node_modules",
    "hardhat.config.ts",
    "dist",
    "cache",
    "artifacts"
  ]
}
